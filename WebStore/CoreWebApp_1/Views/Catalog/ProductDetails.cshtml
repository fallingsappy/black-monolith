@using WebStore.Models.Product
@model ProductViewModel
@{
    ViewData["Title"] = "Товар:" + Model.Name + " | E-Shopper";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @await Html.PartialAsync("Partial/_LeftSideBar")
            </div>

            <div class="col-sm-9 padding-right">
                @await Html.PartialAsync("Partial/ProductDetails/_ProductDetails")

                @await Html.PartialAsync("Partial/ProductDetails/_CategoryTabProductDetails")


                @await Html.PartialAsync("Partial/_RecommendedItems")
            </div>
        </div>
    </div>
</section>