<Window x:Class="DDrop.CropPhoto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDrop"
        xmlns:photoCropper="clr-namespace:DDrop.Controls.PhotoCropper;assembly=DDrop.Controls"
        mc:Ignorable="d"
        Title="Обрезать фотографию" ResizeMode="NoResize" Height="450" Width="800" Topmost="True" Icon="Resources/Icons/MainIcon.png">
    <Grid>
        <photoCropper:CropControl SquareMode="True" x:Name="CroppingControl" Margin="0,0,0,30"/>
        <Border Grid.Column="0" Grid.Row="0" Background="Gainsboro" BorderThickness="1" Height="30" VerticalAlignment="Bottom">
            <Grid>
                <Button Grid.Column="0" Grid.Row="0" Name="CropPhotoButton"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="28" BorderBrush="{x:Null}" Background="{x:Null}" Height="26" Click="CropPhotoButton_OnClick" ToolTip="Добавить фотографию.">
                    <ContentControl Content="{StaticResource AddIcon}" Height="22" Width="23"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
